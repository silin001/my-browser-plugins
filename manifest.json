{
  "name": "摸鱼办",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "下班、放假时间倒计时；上班摸鱼名言！",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "file://*"],
      "js": [
        "./js/jquery.js",
        "./js/units.js",
        "./js/countdown.js",
        "./js/index.js"
      ],
      "css": ["./css/index.css"]
    }
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "欢迎使用摸鱼办插件",
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "https://silin001.gitlab.io"
}
