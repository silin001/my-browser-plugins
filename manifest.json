{
  "name": "摸鱼办",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "下班、放假时间倒计时；上班摸鱼名言、右键菜单常用链接跳转",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "file://*"],
      "js": [
        "./js/jquery.js",
        "./js/units.js",
        "./js/countdown.js",
        "./js/index.js"
      ],
      "css": ["./css/index.css"]
    }
  ],
  "action": {
    "default_icon": "images/icon1.png",
    "default_title": "欢迎使用摸鱼办插件",
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "declarativeNetRequest",
    "storage"
  ],
  "homepage_url": "https://silin001.gitlab.io"
}
