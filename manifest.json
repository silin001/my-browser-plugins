{
  "name": "摸鱼办",
  "version": "0.0.6",
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "description": "下班、周五放假时间倒计时；上班摸鱼名言、快捷键显示指定api请求拦截、右键菜单常用链接跳转、（持续完善中）",
  "background": {
    "service_worker": "./background/background.js"
  },
  "icons": {
    "16": "images/icon3.png",
    "32": "images/icon3.png",
    "48": "images/icon3.png"
  },
  "commands": {
    "show_httplist": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "打开拦截http请求列表"
    },
    "hide_httplist": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "关闭拦截http请求列表"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "./js/jquery-3.5.0.js",
        "./js/units.js",
        "./js/countdown.js",
        "./js/httpIntercept.js",
        "./js/index.js"
      ],
      "css": ["./css/index.css"]
    }
  ],
  "action": {
    "default_icon": "images/icon3.png",
    "default_title": "欢迎使用摸鱼办插件",
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "notifications",
    "declarativeNetRequest",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["*://*/*"]
    },
    {
      "resources": [
        "./js/*",
        "js/interceptXhr.js",
        "js/jquery-3.5.0.js",
        "js/httpIntercept.js"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "homepage_url": "https://silin001.gitlab.io"
}
